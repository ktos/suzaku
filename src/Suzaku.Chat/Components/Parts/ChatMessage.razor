@if (!IsMine)
{
	<div class="d-flex justify-content-between">
		<p class="small mb-1 fw-bold">@Sender</p>
		<p class="small mb-1 text-muted">@Timestamp.ToString("dd MMM") @Timestamp.ToString("t")</p>
	</div>
	<div class="d-flex flex-row justify-content-start">
		<img src="@($"/{Sender.ToLower()}.png")" alt="avatar 1" style="width: 55px; height: 100%;" class="rounded-circle">
		<div>
			<p class="small p-2 ms-3 mb-3 rounded-3" style="background-color: #f5f6f7;">
				@Content
			</p>
		</div>
	</div>
}
else
{
	<div class="d-flex justify-content-between">
		<p class="small mb-1 text-muted">@Timestamp.ToString("dd MMM") @Timestamp.ToString("t")</p>
		<p class="small mb-1 fw-bold">@Sender</p>
	</div>
	<div class="d-flex flex-row justify-content-end pt-1">
		<div>
			<p class="small p-2 me-3 text-white rounded-3 bg-warning">
				@Content
			</p>
		</div>
		<img src="https://ktos.info/assets/avatar.png" class="rounded-circle"
			 alt="avatar 1" style="width: 55px; height: 100%;">
	</div>
}

@code {
	[Parameter] public string Sender { get; set; }
	[Parameter] public string Content { get; set; }
	[Parameter] public DateTime Timestamp { get; set; }
	[Parameter] public bool IsMine { get; set; }
}
